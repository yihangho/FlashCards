.header-container
  %span.h1= @deck.title

  %a.btn.btn-danger.pull-right{:href => deck_path(@deck), :data => {:method => :delete, :confirm => "Are you sure?"}}
    %i.glyphicon.glyphicon-trash
  %a.btn.btn-default.pull-right{:href => edit_deck_path(@deck)}
    %i.glyphicon.glyphicon-edit
  %a.btn.btn-primary.pull-right{:href => random_path(@deck.title)}
    %i.glyphicon.glyphicon-random

- order = [:word, :definition, :sentence]
- @deck.cards.each do |card|
  = render :partial => "partials/cards/card", :locals => {:card => card, :show_all => true, :order => order}
  - unless card == @deck.cards.last
    %hr
