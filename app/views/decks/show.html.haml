- if @deck
  .header-container
    %span.h1= @deck.title

    - if @deck.respond_to?(:id)
      %a.btn.btn-danger.pull-right{:href => deck_path(@deck), :data => {:method => :delete, :confirm => "Are you sure?"}}
        %i.fa.fa-trash-o
      %a.btn.btn-default.pull-right{:href => edit_deck_path(@deck)}
        %i.fa.fa-edit
      %a.btn.btn-primary.pull-right{:href => random_path(@deck.title)}
        %i.fa.fa-random

= render partial: "cards/card", collection: (@deck ? @deck.cards : @cards), spacer_template: "decks/horizontal_rule"
