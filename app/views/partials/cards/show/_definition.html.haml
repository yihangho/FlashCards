- unless @card.definition.empty?
  .well
    = @card.definition

    - unless @card.synonyms.empty?
      %p Synonyms:
      %ul
        - @card.synonyms.split(',').each do |item|
          - target = Card.find_by(:word => item.strip)
          - if target
            %li= link_to target.word, target
          - else
            %li= item.strip

    - unless @card.antonyms.empty?
      %p Antonyms:
      %ul
        - @card.antonyms.split(',').each do |item|
          - target = Card.find_by(:word => item.strip)
          - if target
            %li= link_to target.word, target
          - else
            %li= item.strip
