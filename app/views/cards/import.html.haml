%h1 Import Cards

= form_tag import_cards_path, :multipart => true do
  .form-group
    = label_tag :yaml_file, "Import YAML"
    = file_field_tag :yaml_file

  .form-group
    = label_tag "Tags"
    = text_field_tag :new_decks_titles, "", :class => "form-control", :placeholder => "New Deck 1, New Deck 2"
    = select_tag :deck_ids, select_options_arr(Deck.order(:title), [], :id, :title), :multiple => true, :class => "form-control"

  = submit_tag "Upload", :class => "btn btn-primary"
