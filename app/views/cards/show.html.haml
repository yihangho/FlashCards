%h1 Cards

= render :partial => 'partials/cards/card', :locals => {:card => @card, :show_all => @show_all, :order => @order}

- unless @show_all
  %a.btn.btn-primary#show-hint-btn{:href => "#"} Show Hint
%a.btn.btn-success#thumbs-up-btn{:href => "#", :data => {:card_id => @card.id}} Thumbs Up
%a.btn.btn-danger#thumbs-down-btn{:href => "#", :data => {:card_id => @card.id}} Thumbs Down
%a.btn.btn-default.pull-right{:href => edit_card_path(@card)} Edit
