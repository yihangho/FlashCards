%h1 New Card

= form_for(@card) do |f|
  - [:word, :word_type, :definition, :synonyms, :antonyms, :sentence].each do |sym|
    %div.form-group
      = f.label sym
      = f.text_field sym, :class => "form-control"

  %p.help-block OR

  %div.form-group
    = f.label :yaml_file, "Import YAML"
    = f.file_field :yaml_file

  = f.submit "Save", :class => "btn btn-default"
